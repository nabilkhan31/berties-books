<!doctype html>
<html>
  <head>
    <title>Search Results</title>
    <link rel="stylesheet"  type="text/css" href="/main.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
  </head>
  <body>
    <a href="/"><button class="home-btn"><i class="fa fa-home"></i> Home</button></a>
    <h1>You searched for these books in <%=shopName%></h1>
    <!-- if availableBooks array is empty, return a message saying there are no items -->
    <% if(availableBooks.length === 0){ %>
      <p>Sorry, the book you're looking for does not exist</p>
    <% } %>
    <div class="list-container">
      <!-- map over availableBooks array as it is cleaner and easier to implement features in the future like deletion -->
      <% availableBooks.map((book)=>{ %>
        <!-- The items being rendered are what the user searched for -->
        <div class="card">
          <h4><%=book.name%> <span id="author-text"><%=book.author%></span></h3>
          <p>Price: Â£<%=book.price%></p>
          <p id="description-bold">Description</p>
          <p id="description-body"><%=book.description%></p>
        </div>
        <% }) %>
    </div>
  </body>
</html>
